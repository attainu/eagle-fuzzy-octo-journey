<header>
    <nav class="navbar navbar-dark bg-dark justify-content-between">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="logo.png" width="80" height="40" class="d-inline-block align-top" alt="">
            </a>
        </div>
    </nav>
</header>

<!-- Begin page contentalign-items-center justify-content-center  -->
<main>
    <!-- Section -->
    <section class="align-items-center signup">
        <div class="container">
            <div class="row align-items-center justify-content-center">

                <div class="col-md-6 bg-warning mt-3 mb-3">
                    <h3 class="mt-3 text-center">Sign Up to Ride</h3>
                    <hr>
                    <form class="form-validate" method="GET" action="/login">
                        <div class="row">
                            <div class="form-group col">
                                <label for="SignupFirstname" class="form-label"> First name (required)</label>
                                <input name="SignupFirstname" id="SignupFirstname" type="text" placeholder="First Name"
                                    required="" class="form-control form-control-md">
                            </div>
                            <div class="form-group col">
                                <label for="SignupLastname" class="form-label"> Last name (required)</label>
                                <input name="SignupLastname" id="SignupLastname" type="text" placeholder="Last Name"
                                    required="" class="form-control form-control-md">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="SignupEmail" class="form-label">Enter your email (required)</label>
                            <input name="SignupEmail" id="SignupEmail" type="email" placeholder="name@address.com"
                                required="" class="form-control form-control-md">
                        </div>
                        <div class="form-group mb-4">
                            <div class="row">
                                <div class="col">
                                    <label for="SignupPhone" class="form-label">Enter your phone number
                                        (required)</label>
                                </div>
                            </div>
                            <input name="SignupPhone" id="SignupPhone" placeholder="Phone Number" type="tel" required=""
                                class="form-control form-control-md">
                        </div>

                        <div class="form-group mb-4">
                            <div class="row">
                                <div class="col">
                                    <label for="SignupPassword" class="form-label">Enter a password (required)</label>
                                </div>
                            </div>
                            <input name="SignupPassword" id="SignupPassword" placeholder="Password" type="password"
                                required="" class="form-control form-control-md">
                        </div>
                        <!-- Submit-->
                        <button class="btn btn-md btn-block btn-outline-warning login-decoration mb-3"><b>Sign
                                Up</b></button>
                    </form>
                </div>

            </div>
        </div>
    </section>
</main>

